page {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    padding: 0;
}

.background {
    width: 100%;
    height: 100%;
    position: absolute;
}

.content {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 1;
}

.header {
    width: 100%;
    height: 150rpx;
}

.search {
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin: 30rpx;
}

input {
    border: 5rpx solid #732a1b;
    border-radius: 8rpx;
    margin: 15rpx;
    padding-left: 10rpx;
}

button {
    background-color: #732a1b;
    color: #f0d6a1;
    margin: 10rpx;
}

.generation {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 20rpx;
    padding: 10rpx;
}

.multiple {
    height: 100rpx;
}

.single {
    height: 200rpx;
    width: 100rpx;
    margin: 10rpx;
}

.multiChildren {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
}

.singleChild {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.item {
    border: 6rpx solid #732a1b;
    border-radius: 6rpx;
    color: #732a1b;
    padding: 20rpx;
    margin: 10rpx;
}

.switch {
    margin: 30rpx;
}

.footer {
    width: 100%;
    height: 150rpx;
    position: fixed;
    bottom: 0rpx;
}

.noResult {
    color: #772f1f;
    margin-top: 20rpx;
}

.title {
    font-weight: 600;
    font-size: 35rpx;
    margin: 30rpx;
}