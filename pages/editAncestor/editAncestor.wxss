page {
    width: 100%;
    height: 100%;
    background-color: #f0d6a1;
}

.container {
    padding: 30rpx;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
}

.title {
    width: fit-content;
    color: white;
    background-color: #a3691a;
    padding: 15rpx 30rpx;
    font-size: 30rpx;
}

.item {
    display: flex;
    flex-direction: row;
    margin-top: 60rpx;
}

.col {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 60rpx;
}

.required::before {
    content: '* ';
    color: red;
}

input {
    width: 200rpx;
    border-bottom: 1px solid gray;
}

button {
    background-color: #732a1b;
    color: #f0d6a1;
    font-weight: 500;
}

textarea {
    height: 500rpx;
    border: 1rpx solid #bb9563;
}

.error {
    margin-left: 20rpx;
    margin-top: 60rpx;
}