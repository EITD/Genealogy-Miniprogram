page {
    width: 100%;
    height: 100%;
    background-color: #f0d6a1;
}

.container {
    width: 100%;
    height: 100%;
    padding: 0;
}

.content {
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.logo {
    width: 200rpx;
    height: 200rpx;
    margin-top: 200rpx;
    margin-bottom: 10rpx;
}

button {
    background-color: #732a1b;
    color: #f0d6a1;
    margin-top: 60rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.title {
    margin-top: 30rpx;
    font-size: 35rpx;
    font-weight: 600;
}

.input {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    margin: 60rpx;
}

input {
    width: 300rpx;
    border-bottom: 1px solid gray;
}

.footer {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.submit {
    color: #732a1b;
}
