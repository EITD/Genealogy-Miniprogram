page {
    width: 100%;
    height: 100%;
    background-color: #f0d6a1;
}

.container {
    width: 100%;
    height: 100%;
    padding: 0;
}

scroll-view {
    position: absolute;
    z-index: 1;
}

.item {
    display: flex;
    flex-direction: column;
    padding: 10rpx;
}

.name {
    font-weight: 600;
    margin-bottom: 10rpx;
}

.time {
    font-size: 25rpx;
    color: gray;
}

.content {
    margin-top: 10rpx;
}

.sub {
    margin-top: 20rpx;
}

button {
    background-color: #732a1b;
    color: #f0d6a1;
}

.comment {
    position: absolute;
    right: 20rpx;
}

.divLine{
    margin-top: 30rpx;
    background: #bb9563;
    width: 100%;
    height: 3rpx;
}

.loading {
    position: relative;
    bottom: 0rpx;
    margin: 10rpx;
    text-align: center;
}

.round {
    position: fixed;
    width: 70px;
    height: 70px;
    background-color: #732a1b;
    color: #f0d6a1;
    font-weight: 600;
    border-radius: 100%;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}

textarea {
    height: 600rpx;
    border: 1rpx solid #bb9563;
    margin-top: 20rpx;
    margin-bottom: 30rpx;
}

.footer {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.submit {
    color: #732a1b;
}