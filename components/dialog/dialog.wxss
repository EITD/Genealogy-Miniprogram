.container {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 3;
}

.mask {
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
}

.content {
    position: absolute;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.dialog {
    width: 600rpx;
    margin-top: 150rpx;
    margin-bottom: 150rpx;
    border: 7rpx solid #732a1b;
    border-radius: 12rpx;
    background-color: #f0d6a1;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx;
}

.close {
    position: absolute;
    right: 80rpx;
    color: #772f1f;
    font-size: large;
}